# LLM Configuration (OpenRouter for multi-model access)
OPENROUTER_API_KEY=your_key

# Search APIs
TAVILY_API_KEY=your_key             # Primary search API
SERPAPI_KEY=your_key                # Fallback search API (optional)
SEMANTIC_SCHOLAR_API_KEY=your_key   # Academic search (optional)
NEWSAPI_KEY=your_key                # News search (optional)

# Grammar APIs
GRAMMARLY_API_KEY=your_key                          # Grammar checking (optional)
LANGUAGETOOL_API_URL=https://api.languagetool.org   # Open-source grammar checking

# Social Media APIs (optional)
TWITTER_API_KEY=your_key
LINKEDIN_API_KEY=your_key
GMAIL_API_CREDENTIALS=path/to/credentials.json

# Database
VECTOR_DB_PATH=./data/vector_db
SQLITE_DB_PATH=./data/writing_assistant.db

# Application
API_BASE_URL=/api/v1
ENVIRONMENT=development

# Quality Configuration
QUALITY_THRESHOLD=85.0          # Minimum overall quality score
MAX_REFINEMENT_ITERATIONS=5     # Maximum editing passes
ENABLE_QUALITY_METRICS=true     # Enable comprehensive quality scoring
